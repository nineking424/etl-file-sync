# ETL File Sync Environment Configuration
# Copy this file to .env and modify as needed

# ============================================
# FTP Global Settings
# ============================================
# FTP connection mode: true = Passive (default), false = Active
FTP_PASSIVE_MODE=true

# ============================================
# DLQ (Dead Letter Queue) Settings
# ============================================
# DLQ topic suffix - will be appended to source topic name
# Example: mem-dft-img -> mem-dft-img-dlq
DLQ_TOPIC_SUFFIX=-dlq

# ============================================
# Server Definitions
# ============================================
# Format: {HOSTNAME}_{PROPERTY}
# Properties: TYPE, HOST, PORT, USER, PASS
#
# HOSTNAME is used in Kafka messages to reference server config
# Example message: {"source": {"hostname": "SRC_FTP_SERVER1", "path": "/data/file.csv"}}

# Source FTP Server 1
SRC_FTP_SERVER1_TYPE=ftp
SRC_FTP_SERVER1_HOST=ftp.source.example.com
SRC_FTP_SERVER1_PORT=21
SRC_FTP_SERVER1_USER=srcuser
SRC_FTP_SERVER1_PASS=srcpassword

# Destination FTP Server 1
DST_FTP_SERVER1_TYPE=ftp
DST_FTP_SERVER1_HOST=ftp.dest.example.com
DST_FTP_SERVER1_PORT=21
DST_FTP_SERVER1_USER=dstuser
DST_FTP_SERVER1_PASS=dstpassword

# ============================================
# Additional Servers (add as needed)
# ============================================
# SRC_FTP_SERVER2_TYPE=ftp
# SRC_FTP_SERVER2_HOST=ftp2.source.example.com
# SRC_FTP_SERVER2_PORT=21
# SRC_FTP_SERVER2_USER=user2
# SRC_FTP_SERVER2_PASS=password2

